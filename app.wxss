/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: #f2f2f7;
}

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f2f2f7;
}

/* 苹果风格的卡片 */
.apple-card {
  background-color: #ffffff;
  border-radius: 50rpx;
  box-shadow: none;
  margin-bottom: 40rpx;
  overflow: hidden;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.apple-card:active {
  transform: scale(0.98);
  box-shadow: none;
}

/* 苹果风格的按钮 */
.apple-button {
  background-color: #007aff;
  border-radius: 50rpx;
  padding: 22rpx 45rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  text-align: center;
  transition: background-color 0.2s ease, transform 0.1s ease;
}

.apple-button:active {
  background-color: #0056cc;
  transform: scale(0.95);
}

.apple-button.secondary {
  background-color: white;
  color: #007aff;
  border: 1rpx solid #007aff;
}

.apple-button.secondary:active {
  background-color: #f2f2f7;
}

.apple-button.disabled {
  background-color: #c7c7cc;
  color: white;
  opacity: 0.6;
}

/* 苹果风格的文本 */
.title-large {
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  line-height: 1.2;
}

.title-medium {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
  line-height: 1.3;
}

.title-small {
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
  line-height: 1.4;
}

.body-text {
  font-size: 26rpx;
  color: #000;
  line-height: 1.5;
}

.subtitle-text {
  font-size: 24rpx;
  color: #8e8e93;
  line-height: 1.4;
}

.caption-text {
  font-size: 22rpx;
  color: #8e8e93;
  line-height: 1.3;
}

/* 布局工具类 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 间距工具类 */
.margin-top-small { margin-top: 25rpx; }
.margin-top-medium { margin-top: 40rpx; }
.margin-top-large { margin-top: 60rpx; }

.margin-bottom-small { margin-bottom: 25rpx; }
.margin-bottom-medium { margin-bottom: 40rpx; }
.margin-bottom-large { margin-bottom: 60rpx; }

.padding-small { padding: 25rpx; }
.padding-medium { padding: 40rpx; }
.padding-large { padding: 60rpx; }

/* 苹果风格的输入框 */
.apple-input {
  background-color: rgba(118, 118, 128, 0.12);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #000;
  border: none;
  outline: none;
}

.apple-input::placeholder {
  color: #8e8e93;
}

/* 苹果风格的标签 */
.apple-tag {
  display: inline-block;
  background-color: rgba(0, 122, 255, 0.1);
  color: #007aff;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #e5e5ea;
  margin: 20rpx 0;
}

.divider.thick {
  height: 2rpx;
  background-color: #d1d1d6;
}

/* 阴影效果 */
.shadow-small { box-shadow: none; }

.shadow-medium { box-shadow: none; }

.shadow-large { box-shadow: none; }

/* 圆角工具类 */
.rounded-small { border-radius: 15rpx; }
.rounded-medium { border-radius: 30rpx; }
.rounded-large { border-radius: 50rpx; }
.rounded-full { border-radius: 50%; }

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 苹果风格的加载动画 */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f2f2f7;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .title-large {
    font-size: 40rpx;
  }
  
  .title-medium {
    font-size: 32rpx;
  }
  
  .container {
    padding: 30rpx;
  }
}

