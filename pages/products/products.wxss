  .assistant-track { display:inline-flex; padding: 0 20rpx 6rpx; }
  .assistant-card { flex:none; width: 520rpx; background:#fff; border-radius:50rpx; overflow:hidden; box-shadow:none; border:none; }
  .assistant-card + .assistant-card { margin-left:24rpx; }
  .assistant-image { width:100%; height:520rpx; object-fit:cover; border-radius: 40rpx 40rpx 0 0; display:block; }
  .assistant-content { padding:30rpx; text-align:center; }
  .assistant-title { font-size:28rpx; font-weight:600; color:#000; display:block; margin-bottom:15rpx; line-height:1.4; overflow:hidden; text-overflow:ellipsis; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; text-align:center; }
  
  /* Apple 内容标签 */
  .content-tags {
    display: flex;
    justify-content: center;
    gap: 20rpx;
    margin-bottom: 50rpx;
  }
  
  .content-tag {
    font-size: 24rpx;
    color: #8e8e93;
    padding: 12rpx 25rpx;
    border: 1rpx solid #e5e5ea;
    border-radius: 50rpx;
    background-color: white;
  }
  
  /* 二维码区域 */
  .qr-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-top: 40rpx;
  }
  
  .qr-code {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 40rpx;
    border-radius: 50rpx;
    border: 1rpx solid #e5e5ea;
  }
  
  .qr-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    margin-bottom: 15rpx;
  }
  
  .qr-subtitle {
    font-size: 24rpx;
    color: #8e8e93;
    line-height: 1.5;
    max-width: 500rpx;
  }
  
  /* 免责声明 */
  .disclaimer {
    padding: 30rpx;
    margin-top: 40rpx;
  }
  
  .disclaimer-text {
    font-size: 20rpx;
    color: #8e8e93;
    line-height: 1.6;
    margin-bottom: 10rpx;
  }
  
  .disclaimer-link {
    font-size: 20rpx;
    color: #007aff;
  }
  
  /* 法律信息 */
  .legal {
    padding: 20rpx 30rpx;
    text-align: center;
  }
  
  .legal-text {
    font-size: 18rpx;
    color: #c7c7cc;
    display: block;
    margin-bottom: 5rpx;
  }

