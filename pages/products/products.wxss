/* 产品页面样式 */
.page {
    background-color: #f2f2f7;
    min-height: 100vh;
    padding-bottom: 40rpx;
  }
  
  /* 页面头部 */
  .header {
      display: flex;
      align-items: center; /* 垂直居中对齐所有元素 */
      padding: 20rpx 30rpx 0;
    }
    
    /* 标题样式 - 向左对齐 */
    .header-title {
      margin-right: auto; /* 关键：将标题推到左侧 */
      font-size: 56rpx;   /* 调大标题字号 */
      font-weight: bold;  /* 示例加粗效果 */
    }
    
    .user-avatar {
      width: 72rpx;
      height: 72rpx;
      border-radius: 50%;
      overflow: hidden;
      background-color: #e5e5ea;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: transform 0.2s ease;
    }
    
    .avatar-img {
      width: 100%;
      height: 100%;
    }
    
    .user-avatar:active {
      transform: scale(0.95);
    }
  
  /* 章节容器 */
  .section {
    margin-top: 50rpx;
    padding: 0 30rpx;
  }
  
  .section-title {
    font-size: 48rpx;
    font-weight: 600;
    color: #000;
    display: block;
    margin-bottom: 25rpx;
  }
  
  .section-title.center {
    text-align: center;
    margin-bottom: 40rpx;
  }

  /* 主打服务横向滑动 */
  .hero-section { padding-left: 0; padding-right: 0; }
  .hero-section .section-title { margin-left: 30rpx; }
  .hero-scroll { width:100%; padding:0; margin:0; overflow-x:auto; -webkit-overflow-scrolling:touch; margin-left:0; margin-right:0; }
  .hero-track { display:inline-flex; gap:0; padding: 0 30rpx; min-width:max-content; }
  .hero-track .hero-card { width: calc(100vw - 40rpx); max-width: 680rpx; flex: none; }
  .hero-track .hero-card + .hero-card { margin-left: 30rpx; }
    
  /* 主打产品卡片 */
  .hero-card {
      background: linear-gradient(135deg, #2c1810 0%, #1a0f08 100%);
      border-radius: 50rpx;
      margin-bottom: 60rpx;
      overflow: hidden;
      box-shadow: none;
      position: relative;
    }
    
    .hero-content {
      position: relative;
      height: 720rpx;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }
    
    .hero-image {
      position: absolute;
      left: 0; right: 0; top: 0; bottom: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      object-fit: cover;
    }
    
    .hero-text {
      position: absolute;
      left: 0; right: 0; top: 0; bottom: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 2;
    }
    
    .hero-logo {
      font-size: 200rpx;
      font-weight: 800;
      color: white;
      text-shadow: 0 0 80rpx rgba(255, 255, 255, 0.8);
      letter-spacing: 20rpx;
      text-align: center;
    }
    
    .hero-info {
      padding: 40rpx;
      background-color: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10rpx);
      position: relative;
      z-index: 2;
      border-radius: 0 0 50rpx 50rpx; /* 底部圆角保持50rpx */
    }
    
    .hero-title {
      font-size: 44rpx;
      font-weight: 600;
      color: white;
      display: block;
      margin-bottom: 10rpx;
    }
    
    .hero-subtitle {
      font-size: 28rpx;
      color: rgba(255, 255, 255, 0.8);
      display: block;
      margin-bottom: 30rpx;
    }
    
    .price-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .price-text {
      font-size: 24rpx;
      color: rgba(255, 255, 255, 0.7);
      flex: 1;
    }
    
    .buy-button {
      background-color: white;
      border-radius: 50rpx;
      padding: 20rpx 50rpx;
      margin-left: 30rpx;
    }
    
    .buy-text {
      font-size: 28rpx;
      font-weight: 500;
      color: #000;
    }
  /* 产品分类卡片 */
  .product-categories {
    padding: 40rpx 0 0 0;
    background-color: #f2f2f7;
    margin: 0;
    padding-left: 0;
    padding-right: 0;
    overflow-x: auto;
  }
  
  .categories-scroll {
    white-space: nowrap;
    padding: 0; /* 自身无内边距 */
    margin-left: 0rpx; /* 贴边 */
    margin-right: 0rpx;
  }
  
  .category-card {
    display: inline-block;
    margin-right: 20rpx;
    width: 180rpx;
    height: 225rpx;
    background-color: #ffffff;
    border-radius: 45rpx;
    overflow: hidden;
    box-shadow: none;
    position: relative;
    /* 最后一个卡片右侧也保留间距 */
  }
  
  /* 为最后一个卡片添加右侧间距，确保滚动结束后仍有空白 */
  .category-card:last-child {
    margin-right: 40rpx;
  }

/* 为第一个卡片添加左侧间距，确保滚动结束后仍有空白 */
    .category-card:first-child {
        margin-left: 30rpx;
      }
  
  .category-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }
  
  .category-text-overlay {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: auto;
    min-height: 36%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 18rpx 12rpx 20rpx;
    background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.55) 100%);
    z-index: 1;
  }
  
  .category-text {
    font-size: 24rpx;
    color: #ffffff;
    font-weight: 600;
    text-align: center;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.45);
  }
    
