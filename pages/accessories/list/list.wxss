/* 贴合苹果商店两列卡片样式 */
.page { background:#f2f2f7; min-height:100vh; }
.header { padding:30rpx; }
.title { font-size:40rpx; font-weight:700; }

.access-grid { display:grid; grid-template-columns:1fr 1fr; column-gap:40rpx; row-gap:60rpx; padding:0 30rpx 40rpx; }
.access-card { background:#fff; border-radius:40rpx; padding:30rpx 20rpx; box-shadow:none; overflow:hidden; }
.product-img { width:100%; height:280rpx; object-fit:contain; }
.brand { color:#ff9f0a; font-size:22rpx; margin-top:10rpx; }
.brand.accent { color:#007aff; }
.name { display:block; font-size:28rpx; font-weight:700; margin-top:10rpx; line-height:1.4; }
.price { display:block; font-size:26rpx; margin-top:10rpx; }
.colors { display:flex; align-items:center; gap:12rpx; margin-top:12rpx; }
.dot { width:22rpx; height:22rpx; border-radius:50%; }
.more { font-size:22rpx; color:#8e8e93; margin-left:6rpx; }
.footnote { display:block; margin-top:20rpx; font-size:20rpx; color:#8e8e93; }

