.page { background:#000; min-height:100vh; }
.hero { background:#000; color:#fff; }
.notice { display:block; padding:24rpx 30rpx; background:#1c1c1e; color:#d1d1d6; line-height:1.6; }
.link { color:#0a84ff; }
.hero-content { position:relative; padding:80rpx 30rpx 60rpx; text-align:center; }
.pro-glow { position:absolute; top:140rpx; left:50%; transform:translateX(-50%); font-size:160rpx; font-weight:900; color:#fff; opacity:.9; text-shadow:0 0 80rpx rgba(255,200,120,.9), 0 0 140rpx rgba(255,200,120,.7); letter-spacing:14rpx; }
.product { width:520rpx; height:720rpx; margin:160rpx auto 40rpx; z-index:2; }
.hero-title { font-size:56rpx; font-weight:800; margin-top:10rpx; }
.cta { margin-top:40rpx; display:flex; flex-direction:column; align-items:center; gap:24rpx; }
.buy { background:#0a84ff; color:#fff; border-radius:60rpx; padding:18rpx 48rpx; font-size:30rpx; }
.price { font-size:36rpx; color:#fff; }

