page {
  --background: 0 0% 100%;
  --foreground: 240 10% 3.9%;
  --card: 0 0% 100%;
  --card-foreground: 240 10% 3.9%;
  --primary: 240 5.9% 10%;
  --primary-foreground: 0 0% 98%;
  --secondary: 240 4.8% 95.9%;
  --secondary-foreground: 240 5.9% 10%;
  --muted: 240 4.8% 95.9%;
  --muted-foreground: 240 3.8% 46.1%;
  --accent: 240 4.8% 95.9%;
  --accent-foreground: 240 5.9% 10%;
  --border: 240 5.9% 90%;
  --ring: 240 5.9% 10%;
  --radius: 8rpx;
  --glass-bg: rgba(255, 255, 255, 0.65);
  --glass-border: rgba(255, 255, 255, 0.5);
}

.container {
  min-height: 100vh;
  background: #fdfcf8;
  padding-bottom: 120rpx;
}

/* é¡¶éƒ¨åŒºåŸŸ */
.header-section {
  padding: 32rpx 40rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(253, 252, 248, 0.95);
  backdrop-filter: blur(20rpx);
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: hsl(var(--foreground));
  letter-spacing: -1rpx;
}

.notify-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--glass-bg);
  backdrop-filter: blur(16rpx);
  border: 1rpx solid var(--glass-border);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.05);
}

.bell-icon {
  font-size: 36rpx;
}

/* æœç´¢æ¡† */
.search-box {
  background: var(--glass-bg);
  backdrop-filter: blur(16rpx);
  border: 1rpx solid var(--glass-border);
  border-radius: 32rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.05);
}

.search-icon {
  font-size: 32rpx;
  color: hsl(var(--muted-foreground));
  margin-right: 24rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: hsl(var(--foreground));
  background: transparent;
}

/* ç­›é€‰æ ‡ç­¾ */
.filter-tabs-wrapper {
  white-space: nowrap;
  padding-bottom: 16rpx;
}

.filter-chip {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 32rpx;
  margin-right: 24rpx;
  background: var(--glass-bg);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid var(--glass-border);
  border-radius: 48rpx;
  font-size: 24rpx;
  color: hsl(var(--muted-foreground));
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(31, 38, 135, 0.03);
  transition: all 0.3s;
  flex-shrink: 0;
}

.filter-chip.active {
  background: hsl(var(--primary));
  color: hsl(var(--primary-foreground));
  border-color: hsl(var(--primary));
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.15);
}

.filter-chip:active {
  transform: scale(0.96);
}

.arrow-icon {
  margin-left: 8rpx;
  font-size: 20rpx;
}

/* åŠ è½½çŠ¶æ€ */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  gap: 16rpx;
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid hsl(var(--border));
  border-top-color: hsl(var(--foreground));
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: hsl(var(--muted-foreground));
}

