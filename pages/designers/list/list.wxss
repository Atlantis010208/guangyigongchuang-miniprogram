.designer-list-content {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.designer-card {
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 48rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.05);
  transition: all 0.3s;
}

.designer-card:active {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 48rpx rgba(31, 38, 135, 0.1);
}

