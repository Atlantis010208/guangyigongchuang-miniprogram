.page{background:#f2f2f7;min-height:100vh}
.page-title{display:block;font-size:56rpx;font-weight:800;padding:30rpx}
.profile-card{margin:0 30rpx 20rpx;background:#fff;border-radius:40rpx;padding:0;position:relative;overflow:hidden}
.profile-card.unified .top{display:flex;align-items:center;padding:24rpx 28rpx}
.profile-card:active{background:#f8f8f8}
.edit-arrow{position:absolute;right:28rpx;color:#c7c7cc;font-size:28rpx}
.avatar{width:120rpx;height:120rpx;border-radius:50%;background:#e5e5ea}
.info{margin-left:24rpx}
.name{display:block;font-size:40rpx;font-weight:700}
.phone{display:block;margin-top:8rpx;color:#0a84ff;font-size:26rpx}
.cells{margin:20rpx 30rpx;background:#fff;border-radius:40rpx;overflow:hidden}
.profile-card.unified .cells.inline{margin:0;border-top:1rpx solid #eee;border-radius:0}
.profile-card.unified .cells.inline .cell{padding:30rpx 28rpx}
.cell{display:flex;justify-content:space-between;align-items:center;padding:34rpx 28rpx;border-bottom:1rpx solid #eee}
.cell:last-child{border-bottom:none}
.arrow{color:#c7c7cc}

.floating-contact{ position: fixed; right: 24rpx; bottom: 160rpx; background: #ffffff; border-radius: 999rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12); display: flex; align-items: center; padding: 12rpx 18rpx; z-index: 9 }
.float-icon{ width: 36rpx; height: 36rpx; margin-right: 8rpx }
.float-text{ font-size: 26rpx; color: #1c1c1e }

/* 未登录提示卡片 */
.login-prompt-card {
  margin: 0 30rpx 20rpx;
  background: #fff;
  border-radius: 40rpx;
  padding: 40rpx 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.login-prompt-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #e5e5ea;
  flex-shrink: 0;
}

.login-prompt-info {
  flex: 1;
  margin-left: 24rpx;
  margin-right: 16rpx;
}

.login-prompt-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.login-prompt-desc {
  display: block;
  font-size: 24rpx;
  color: #86868b;
}

.login-prompt-btn {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  background: #007aff;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 999rpx;
  border: none;
}

.login-prompt-btn:active {
  background: #0066d6;
}

