.page {
  background: #f2f2f7;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  padding: 30rpx 30rpx 20rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #000;
  display: block;
}

.subtitle {
  font-size: 26rpx;
  color: #8e8e93;
  margin-top: 10rpx;
  display: block;
}

/* 状态筛选标签 */
.status-tabs {
  display: flex;
  white-space: nowrap;
  padding: 0 20rpx 20rpx;
  background: #f2f2f7;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  background: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.tab-item.active {
  background: #007aff;
  color: #fff;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #007aff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 32rpx;
  height: 32rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #8e8e93;
  margin-top: 20rpx;
}

/* 预约列表 */
.appointment-list {
  padding: 0 30rpx;
}

.appointment-card {
  background: #fff;
  border-radius: 40rpx;
  margin-bottom: 30rpx;
  padding: 40rpx 30rpx;
}

.appointment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.service-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
  flex: 1;
  margin-right: 20rpx;
}

.status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  flex-shrink: 0;
}

/* 统一为黑/白/蓝配色 */
.status-pending { background: #007aff; }
.status-confirmed { background: #34c759; }
.status-completed { background: #000; }
.status-cancelled { background: #8e8e93; }

.appointment-info {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #8e8e93;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #000;
  text-align: right;
  flex: 1;
  margin-left: 40rpx;
}

.appointment-actions {
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  padding: 22rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  line-height: 1.4;
}

/* 按钮仅使用黑/白/蓝 */
.btn-cancel { background: #ff3b30; color: #fff; }
.btn-reschedule { background: #000; color: #fff; }
.btn-contact { background: #007aff; color: #fff; }
.btn-primary { background: #007aff; color: #fff; width: 300rpx; margin: 40rpx auto 0; display: block; }
.btn-default { background: #f2f2f7; color: #000; }

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  color: #8e8e93;
  font-size: 26rpx;
  gap: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 30rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #8e8e93;
  margin-bottom: 60rpx;
}

/* 改期弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 640rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f2f2f7;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #8e8e93;
}

.modal-body {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #000;
  margin-bottom: 16rpx;
}

.required {
  color: #ff3b30;
}

.picker-value {
  padding: 24rpx;
  background: #f2f2f7;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #000;
}

.picker-value.placeholder {
  color: #8e8e93;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  background: #f2f2f7;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #000;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  padding: 24rpx 32rpx 32rpx;
  gap: 24rpx;
}

.modal-footer .btn {
  margin: 0;
  width: auto;
}
