.page {
  background: #f8f9fb;
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Header Section */
.header {
  padding: 40rpx 40rpx 20rpx;
  background: #fff;
}

.title {
  font-size: 52rpx;
  font-weight: 700;
  color: #1d1d1f;
  display: block;
  letter-spacing: -1rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #86868b;
  margin-top: 12rpx;
  display: block;
}

/* Status Tabs */
.status-tabs {
  display: flex;
  white-space: nowrap;
  padding: 20rpx 32rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
}

.tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  padding: 0 32rpx;
  margin-right: 20rpx;
  background: #f5f5f7;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #48484a;
  transition: all 0.2s ease;
}

.tab-item.active {
  background: #007aff;
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
  }

/* Appointment List */
.appointment-list {
  padding: 32rpx;
}

.appointment-card {
  background: #fff;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
  display: block;
}

.create-time {
  font-size: 24rpx;
  color: #86868b;
  margin-top: 6rpx;
  display: block;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-pending { background: #fff9e6; color: #f5a623; }
.status-confirmed { background: #e8f8ef; color: #34c759; }
.status-completed { background: #f2f2f7; color: #1d1d1f; }
.status-cancelled { background: #f2f2f7; color: #86868b; }

/* Designer Row */
.designer-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f2f2f7;
}

.designer-mini-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #f5f5f7;
}

.designer-mini-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.designer-mini-name {
  font-size: 26rpx;
  color: #48484a;
}

.designer-mini-rating {
  font-size: 22rpx;
  color: #f5a623;
  font-weight: 500;
}

/* Demand Summary */
.demand-summary {
  display: flex;
  background: #f5f5f7;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  gap: 32rpx;
}

.summary-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-label {
  font-size: 22rpx;
  color: #86868b;
  margin-bottom: 4rpx;
}

.item-value {
  font-size: 26rpx;
  color: #1d1d1f;
  font-weight: 500;
}

/* Designer Contact Bar */
.designer-contact-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #e8f8ef;
  padding: 24rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}

.contact-main {
  flex: 1;
}

.contact-label {
  font-size: 22rpx;
  color: #34c759;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.contact-content {
  display: flex;
  gap: 20rpx;
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 600;
}

.contact-actions {
  display: flex;
  gap: 16rpx;
}

.action-icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.action-icon-btn.call {
  background: #e8f8ef;
}

.action-icon-btn.copy {
  background: #e1f0ff;
}

.action-icon-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.action-icon-btn .icon {
  width: 36rpx;
  height: 36rpx;
}

/* Status Notice */
.status-notice {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 24rpx;
}

.notice-dot {
  width: 12rpx;
  height: 12rpx;
  background: #f5a623;
  border-radius: 50%;
  margin-right: 16rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #f5a623;
}

/* Card Footer Actions */
.btn-group {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 44rpx;
  padding: 0;
  margin: 0;
  border: none;
  transition: all 0.2s;
}

.action-btn::after { border: none; }

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-btn.primary { 
  background: #007aff; 
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.action-btn.outline { 
  background: #f5f5f7; 
  color: #1d1d1f; 
}

.action-btn.outline.danger { 
  background: #fff1f0; 
  color: #ff3b30; 
}

/* Modal & Sheet */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.modal-mask.show {
  visibility: visible;
  opacity: 1;
}

.detail-sheet {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -100%;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
}

.modal-mask.show .detail-sheet {
  bottom: 0;
}

.sheet-header {
  padding: 32rpx;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #f2f2f7;
}

.handle {
  width: 80rpx;
  height: 8rpx;
  background: #e5e5ea;
  border-radius: 4rpx;
  position: absolute;
  top: 16rpx;
  left: 50%;
  transform: translateX(-50%);
}

.sheet-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1d1d1f;
}

.sheet-close {
  position: absolute;
  right: 32rpx;
  top: 32rpx;
  padding: 10rpx;
  font-size: 32rpx;
  color: #86868b;
}

.sheet-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

/* Detail Box */
.detail-hero {
  margin-bottom: 48rpx;
}

.designer-info-box {
  display: flex;
  align-items: center;
  background: #f8f9fb;
  padding: 32rpx;
  border-radius: 24rpx;
}

.designer-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #eee;
}

.designer-text {
  flex: 1;
}

.designer-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1d1d1f;
  display: block;
}

.designer-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.designer-tags .tag {
  font-size: 24rpx;
  color: #f5a623;
  font-weight: 600;
}

.status-badge {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

/* Detail Groups */
.detail-group {
  margin-bottom: 48rpx;
}

.group-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
  border-left: 8rpx solid #007aff;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.info-cell {
  background: #f5f5f7;
  padding: 24rpx;
  border-radius: 16rpx;
}

.cell-label {
  font-size: 22rpx;
  color: #86868b;
  display: block;
  margin-bottom: 8rpx;
}

.cell-value {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 600;
}

.info-full-cell {
  background: #f5f5f7;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

/* Contact Cards */
.contact-card-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.contact-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #e8f8ef;
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
}

.card-label {
  font-size: 22rpx;
  color: #34c759;
  font-weight: 600;
  display: block;
  margin-bottom: 4rpx;
}

.card-value {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 700;
}

.icon-btn {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: 600;
  padding: 0 32rpx;
  background: #34c759;
  color: #fff;
  border-radius: 30rpx;
}

.icon-btn.outline {
  background: transparent;
  border: 2rpx solid #34c759;
  color: #34c759;
}

/* Pending Notice */
.pending-notice-card {
  background: #fff9e6;
  padding: 40rpx;
  border-radius: 32rpx;
  text-align: center;
}

.notice-icon { font-size: 64rpx; margin-bottom: 20rpx; }
.notice-title { font-size: 32rpx; font-weight: 700; color: #f5a623; display: block; }
.notice-desc { font-size: 26rpx; color: #86868b; margin-top: 12rpx; display: block; }

/* Footer */
.sheet-footer {
  padding: 32rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f2f2f7;
}

.sheet-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.sheet-btn.primary { background: #007aff; color: #fff; }
.sheet-btn.danger { background: #fff1f0; color: #ff3b30; }

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.1;
}

.empty-text {
  font-size: 30rpx;
  color: #86868b;
  margin-bottom: 60rpx;
}

/* Load More */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 40rpx 0 60rpx;
  color: #86868b;
  font-size: 24rpx;
  width: 100%;
  text-align: center;
}

.loading-spinner {
  margin-right: 0;
  margin-bottom: 12rpx;
}
