.page {
  background: #f2f2f7;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  padding: 30rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #000;
}

/* 预约列表 */
.appointment-list {
  padding: 0 30rpx;
}

.appointment-card {
  background: #fff;
  border-radius: 40rpx;
  margin-bottom: 30rpx;
  padding: 40rpx 30rpx;
}

.appointment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.service-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
}

.status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

/* 统一为黑/白/蓝配色 */
.status-pending { background: #007aff; }
.status-confirmed { background: #007aff; }
.status-completed { background: #000; }
.status-cancelled { background: #000; }

.appointment-info {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #8e8e93;
}

.value {
  font-size: 28rpx;
  color: #000;
  text-align: right;
  flex: 1;
  margin-left: 40rpx;
}

.appointment-actions {
  display: flex;
  gap: 24rpx; /* 两个按钮间距适中 */
}

.btn {
  flex: 1;
  padding: 22rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

/* 按钮仅使用黑/白/蓝 */
.btn-cancel { background: #000; color: #fff; }
.btn-reschedule { background: #000; color: #fff; }
.btn-contact { background: #007aff; color: #fff; }
.btn-primary { background: #007aff; color: #fff; width: 300rpx; margin: 40rpx auto 0; display: block; }

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 30rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #8e8e93;
  margin-bottom: 60rpx;
}