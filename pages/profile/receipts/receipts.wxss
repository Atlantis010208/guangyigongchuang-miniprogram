.page {
  background: #f2f2f7;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.header {
  padding: 30rpx 30rpx 20rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #000;
  display: block;
}

.subtitle {
  font-size: 26rpx;
  color: #8e8e93;
  margin-top: 10rpx;
  display: block;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 0 30rpx 20rpx;
  gap: 20rpx;
}

.search-input-wrap {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  width: 100%;
  height: 72rpx;
  background: #fff;
  border-radius: 36rpx;
  padding: 0 70rpx 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.clear-btn {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #8e8e93;
  font-size: 24rpx;
}

.filter-btn {
  position: relative;
  height: 72rpx;
  padding: 0 30rpx;
  background: #007aff;
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.filter-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ff3b30;
  border-radius: 50%;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #007aff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
  width: 32rpx;
  height: 32rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #8e8e93;
  margin-top: 20rpx;
}

/* 收据列表 */
.cells {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 40rpx;
  overflow: hidden;
}

.cell {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 30rpx 28rpx;
  border-bottom: 1rpx solid #f2f2f7;
}

.cell:last-child {
  border-bottom: none;
}

.left {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: 20rpx;
}

.cell-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  color: #000;
  font-weight: 500;
}

.type-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background: #f2f2f7;
  color: #666;
}

.type-tag.type-purchase { background: #e3f2fd; color: #1976d2; }
.type-tag.type-service { background: #f3e5f5; color: #7b1fa2; }
.type-tag.type-subscription { background: #e8f5e9; color: #388e3c; }
.type-tag.type-refund { background: #fff3e0; color: #f57c00; }

.date {
  font-size: 24rpx;
  color: #8e8e93;
  margin-top: 6rpx;
}

.order-no {
  font-size: 22rpx;
  color: #aaa;
  margin-top: 4rpx;
}

.right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.amount {
  font-size: 34rpx;
  color: #000;
  font-weight: 600;
}

.amount.refunded {
  color: #ff9500;
}

.status {
  font-size: 22rpx;
  margin-top: 8rpx;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff3b30;
  margin-top: 16rpx;
  padding: 8rpx 16rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  color: #8e8e93;
  font-size: 26rpx;
  gap: 12rpx;
}

/* 空状态 */
.empty {
  color: #8e8e93;
  text-align: center;
  padding: 120rpx 30rpx;
  font-size: 30rpx;
}

/* 导出栏 */
.export-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.export-btn {
  width: 100%;
  height: 88rpx;
  background: #007aff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

/* 弹窗公共样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 640rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f2f2f7;
  flex-shrink: 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #8e8e93;
}

.modal-body {
  padding: 32rpx;
  overflow-y: auto;
  flex: 1;
}

.modal-footer {
  display: flex;
  padding: 24rpx 32rpx 32rpx;
  gap: 24rpx;
  flex-shrink: 0;
  border-top: 1rpx solid #f2f2f7;
}

/* 按钮样式 */
.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-primary {
  background: #007aff;
  color: #fff;
}

.btn-default {
  background: #f2f2f7;
  color: #000;
}

.btn-danger {
  background: #ff3b30;
  color: #fff;
}

/* 筛选弹窗 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #000;
  margin-bottom: 16rpx;
}

.picker-value {
  padding: 24rpx;
  background: #f2f2f7;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #000;
}

.picker-value.placeholder {
  color: #8e8e93;
}

/* 详情弹窗 */
.detail-modal {
  max-height: 85vh;
}

.detail-section {
  padding-bottom: 24rpx;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #f2f2f7;
}

.detail-section:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-row.main {
  align-items: flex-start;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
  flex: 1;
  margin-right: 20rpx;
}

.detail-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #000;
}

.detail-amount.refunded {
  color: #ff9500;
}

.detail-status {
  font-size: 26rpx;
  margin-top: 8rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #8e8e93;
}

.detail-value {
  font-size: 28rpx;
  color: #000;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #8e8e93;
  margin-bottom: 16rpx;
}

.item-list {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 16rpx;
}

.item-row {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #eee;
}

.item-row:last-child {
  border-bottom: none;
}

.item-name {
  flex: 1;
  font-size: 28rpx;
  color: #000;
}

.item-qty {
  font-size: 26rpx;
  color: #8e8e93;
  margin: 0 20rpx;
}

.item-price {
  font-size: 28rpx;
  color: #000;
  font-weight: 500;
}

.detail-remark {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
