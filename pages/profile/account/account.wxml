<scroll-view class="page" scroll-y>
  <view class="header">
    <text class="title">编辑个人资料</text>
  </view>
  
  <!-- 统一白卡容器 -->
  <view class="unified-card">
    <!-- 头像编辑 -->
    <view class="avatar-section">
      <image class="large-avatar" src="{{user.avatar || '/images/个人中心.png'}}" mode="aspectFill" bindtap="chooseAvatar"></image>
      <text class="avatar-tip" bindtap="chooseAvatar">点击更换头像</text>
    </view>

    <!-- 基本信息 -->
    <view class="form-section">
      <view class="form-item">
        <text class="label">昵称</text>
        <input class="input" value="{{user.name}}" bindinput="onNameInput" placeholder="请输入昵称"/>
      </view>
      <view class="form-item">
        <text class="label">手机号</text>
        <input class="input" value="{{user.phone}}" bindinput="onPhoneInput" placeholder="请输入手机号"/>
      </view>
    </view>

    <!-- 保存按钮 -->
    <view class="button-section in-card">
      <button class="save-button" bindtap="saveProfile">保存</button>
    </view>
  </view>
</scroll-view>


