.page {
  background: #f2f2f7;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  padding: 30rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #000;
}

/* 统一白卡容器 */
.unified-card {
  margin: 0 30rpx 40rpx;
  background: #fff;
  border-radius: 40rpx;
  padding: 40rpx 30rpx 50rpx;
}

/* 头像编辑区域 */
.avatar-section { display:flex; flex-direction:column; align-items:center; margin: 10rpx 0 40rpx; }

.large-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #e5e5ea;
  margin-bottom: 20rpx;
}

.large-avatar:active {
  transform: scale(0.95);
}

.avatar-tip {
  font-size: 28rpx;
  color: #007aff;
}

/* 表单区域 */
.form-section { margin: 0; background: transparent; border-radius: 0; overflow: hidden; }

.form-item {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #000;
  width: 140rpx;
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 32rpx;
  text-align: right;
  color: #000;
}

.input::placeholder {
  color: #999;
}

/* 按钮区域 */
.button-section { margin: 0 30rpx; }
.button-section.in-card { margin: 30rpx 0 0; }

.save-button {
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 34rpx;
  font-weight: 500;
  width: 100%;
  box-sizing: border-box;
}

.save-button:active {
  background: #0056d3;
}