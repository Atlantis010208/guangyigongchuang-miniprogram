/* 页面容器 */
.page {
  min-height: 100vh;
  background: #f2f2f7;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1c1c1e;
}

.subtitle {
  font-size: 26rpx;
  color: #8e8e93;
  margin-top: 8rpx;
}

/* 列表 */
.list {
  padding: 0 30rpx;
}

/* 卡片 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1c1c1e;
}

.status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.order-no {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.order-no .label {
  font-size: 24rpx;
  color: #8e8e93;
}

.order-no .value {
  font-size: 24rpx;
  color: #3a3a3c;
  font-family: monospace;
}

.desc {
  font-size: 28rpx;
  color: #636366;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: block;
}

.specs {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.spec-item {
  font-size: 26rpx;
  color: #48484a;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f2f2f7;
}

.time {
  font-size: 24rpx;
  color: #aeaeb2;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  color: #007aff;
  font-size: 28rpx;
  font-weight: 500;
}

.arrow {
  font-size: 32rpx;
  margin-top: -4rpx;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5ea;
  border-top-color: #007aff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #8e8e93;
  margin-top: 20rpx;
}

/* 空状态 */
.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #3a3a3c;
  margin-top: 32rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #8e8e93;
  text-align: center;
  margin-top: 12rpx;
  line-height: 1.5;
}

.publish-btn {
  margin-top: 40rpx;
  background: #1c1c1e !important;
  color: #fff !important;
  font-size: 30rpx;
  font-weight: 500;
  padding: 0 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  border: none;
}

/* 加载更多 / 没有更多 */
.loading-more,
.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #aeaeb2;
}
