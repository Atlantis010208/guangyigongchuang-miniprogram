.page {
  background: #f2f2f7;
  min-height: 100vh;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #000;
}

.add-btn {
  background: #000;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

/* 地址列表 */
.address-list { padding: 0 16rpx; }
.container-card { background:#fff; border-radius: 30rpx; padding: 10rpx 14rpx; }

.address-card { background: transparent; border-radius: 0; margin-bottom: 0; padding: 24rpx 16rpx; position: relative; }
.address-card.unified + .address-card.unified { border-top: 1rpx solid #eee; }

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.contact-info { display:flex; align-items:center; gap: 16rpx; }

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
}

.phone {
  font-size: 28rpx;
  color: #8e8e93;
}

.default-tag { background:#ff9500; color:#fff; padding:8rpx 16rpx; border-radius:20rpx; font-size:22rpx; }
.default-tag.inline { margin-left: 8rpx; }

.address-detail { margin-bottom: 24rpx; }

.address-text {
  font-size: 28rpx;
  color: #000;
  line-height: 1.5;
}

.address-actions { display:flex; }
.address-actions .btn + .btn { margin-left: 20rpx; }
.address-actions.right{ justify-content:flex-end }

.btn { padding: 16rpx 24rpx; border-radius: 24rpx; font-size: 26rpx; text-align: center; border: none; }

.btn-edit {
  background: #007aff;
  color: #fff;
}

.btn-default {
  background: #ff9500;
  color: #fff;
}

.btn-delete {
  background: #ff3b30;
  color: #fff;
}
.btn-ghost{ background:#fff; color:#007aff; border: 2rpx solid #e5e5ea }

.delete-icon{ position:absolute; right:24rpx; top:24rpx; width:48rpx; height:48rpx; line-height:48rpx; text-align:center; border-radius:50%; background:#f7f7f9; color:#8e8e93; font-size:36rpx }

.btn-primary {
  background: #000;
  color: #fff;
  width: 300rpx;
  margin: 40rpx auto 0;
  display: block;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 30rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #8e8e93;
  margin-bottom: 60rpx;
}