.page {
  background: #F5F5F7; /* Apple style light gray background */
  min-height: 100vh;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx;
}

.title {
  font-size: 56rpx; /* Large Title */
  font-weight: 700;
  color: #000;
  letter-spacing: -1rpx;
}

.add-btn {
  background: #000;
  color: #fff;
  border: none;
  border-radius: 36rpx; /* Pill shape */
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin: 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Address List */
.address-list {
  padding: 0 32rpx;
}

.address-card {
  background: #fff;
  border-radius: 24rpx; /* Smooth corners */
  padding: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  transition: all 0.2s ease;
}

.address-card:active {
  transform: scale(0.98);
}

.delete-icon {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx; /* Visual centering adjustment */
  text-align: center;
  border-radius: 50%;
  background: #F2F2F7;
  color: #8E8E93;
  font-size: 32rpx;
  z-index: 10;
}

.address-header {
  margin-bottom: 16rpx;
  padding-right: 60rpx; /* Make space for delete icon */
}

.contact-info {
  display: flex;
  align-items: baseline; /* Align text baselines */
  flex-wrap: wrap;
}

.name {
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
  margin-right: 16rpx;
}

.phone {
  font-size: 30rpx;
  color: #8E8E93;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.default-tag {
  background: #000;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
  margin-left: 16rpx;
  transform: translateY(-2rpx);
  display: inline-block;
}

.address-detail {
  margin-bottom: 32rpx;
}

.address-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.address-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid #F5F5F7;
  padding-top: 24rpx;
}

.btn {
  margin: 0;
  padding: 0 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-ghost {
  background: #F5F5F7;
  color: #000;
}

.btn-default {
  background: #fff;
  color: #000;
  border: 2rpx solid #E5E5EA;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.2;
}

.empty-text {
  font-size: 30rpx;
  color: #8E8E93;
  margin-bottom: 48rpx;
}

.btn-primary {
  background: #000;
  color: #fff;
  width: 320rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15);
}
