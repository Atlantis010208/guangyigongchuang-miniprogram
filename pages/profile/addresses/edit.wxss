.page { background:#f2f2f7; min-height:100vh; padding-bottom: calc(160rpx + env(safe-area-inset-bottom)); display:flex; flex-direction:column; }
.scroll { flex:1; }
.form { padding: 0 16rpx; }
.form.unified { background:#fff; border-radius: 30rpx; padding: 16rpx; margin: 16rpx; }
.cell { background:transparent; border-radius:0; padding: 20rpx 8rpx; margin-bottom: 0; }
.cell + .cell { border-top: 1rpx solid #eee; }
.label { font-size:28rpx; color:#000; font-weight:600; display:block; margin-bottom:14rpx; }
.input { font-size:28rpx; color:#000; }
.picker-cell { display:block; width:auto; }
.picker-text { font-size:28rpx; color:#8e8e93; }
.textarea { width:100%; min-height: 160rpx; font-size:28rpx; color:#000; }
.footer { position:fixed; left:0; right:0; bottom:0; padding: 20rpx 30rpx calc(40rpx + env(safe-area-inset-bottom)); background:rgba(242,242,247,0.9); backdrop-filter: blur(10rpx); z-index: 2000; }
.btn-primary { background:#007aff; color:#fff; border:none; border-radius:30rpx; padding: 24rpx; font-size:30rpx; }


