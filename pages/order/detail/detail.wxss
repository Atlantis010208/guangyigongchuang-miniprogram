/* 页面基础 */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f8f8 0%, #f2f2f7 100%);
  padding-bottom: 40rpx;
}

/* ========== 订单状态头部 ========== */
.status-header {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.status-icon text {
  font-size: 36rpx;
  color: #fff;
}

.status-icon.status-completed {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.status-icon.status-completed text {
  font-size: 40rpx;
}

.status-icon-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.status-info {
  flex: 1;
  min-width: 0;
}

.status-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.status-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.status-time {
  font-size: 24rpx;
  color: #999;
}

.status-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  flex-shrink: 0;
}

.tag-priority {
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  color: #000;
  font-size: 20rpx;
  font-weight: 600;
}

/* ========== 通用卡片样式 ========== */
.card {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 24rpx 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  align-items: center;
  padding: 28rpx 28rpx 0;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.card-body {
  padding: 24rpx 28rpx 28rpx;
}

/* ========== 收货信息 ========== */
.address-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.empty {
  font-size: 26rpx;
  color: #999;
}

/* ========== 商品清单 ========== */
.product-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.product-item:first-child {
  padding-top: 0;
}

.product-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.spec-tag {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}

.product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.product-qty {
  font-size: 26rpx;
  color: #999;
}

/* ========== 订单信息列表 ========== */
.info-list {
  padding-top: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-row:first-child {
  padding-top: 0;
}

.info-label {
  font-size: 26rpx;
  color: #999;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  max-width: 60%;
  word-break: break-all;
}

/* ========== 退款信息卡片 ========== */
.refund-card {
  border: 2rpx solid #ffd666;
  background: linear-gradient(135deg, #fffbe6 0%, #fff 100%);
}

.refund-card .card-header {
  padding-bottom: 0;
}

.refund-card .refund-header {
  flex: 1;
}

.refund-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #fa8c16;
  font-size: 26rpx;
  font-weight: 500;
  margin-left: auto;
}

.refund-type {
  font-size: 24rpx;
  color: #999;
}

/* ========== 虚拟发货信息卡片 ========== */
.virtual-delivery-card {
  border: 2rpx solid #36cfc9;
  background: linear-gradient(135deg, #e6fffb 0%, #fff 100%);
}

.virtual-delivery-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 28rpx 28rpx 0;
}

.virtual-delivery-header .card-icon {
  font-size: 36rpx;
}

.virtual-delivery-header .card-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.virtual-delivery-tag {
  background: linear-gradient(90deg, #36cfc9, #1890ff);
  color: #fff;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-weight: 500;
}

.virtual-delivery-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx 28rpx;
}

.virtual-delivery-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.virtual-delivery-link-row,
.virtual-delivery-code-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.virtual-delivery-label {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  margin-right: 8rpx;
}

.virtual-delivery-link {
  font-size: 24rpx;
  color: #1890ff;
  word-break: break-all;
  flex: 1;
}

.virtual-delivery-code {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 600;
  background: #fff2f0;
  padding: 6rpx 20rpx;
  border-radius: 8rpx;
}

.virtual-delivery-alt {
  font-size: 22rpx;
  color: #fa8c16;
  display: block;
  margin-top: 12rpx;
}

.virtual-delivery-copy-btn {
  margin: 0 28rpx 28rpx;
  background: linear-gradient(90deg, #36cfc9, #1890ff);
  color: #fff;
  font-size: 28rpx;
  border-radius: 999rpx;
  padding: 24rpx 0;
  border: none;
  font-weight: 600;
}

/* ========== 底部操作区 ========== */
.action-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 0 24rpx;
  padding: 0;
  background: transparent;
}

.btn {
  flex: 1;
  min-width: 160rpx;
  border-radius: 999rpx;
  padding: 24rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid #000;
  background: #fff;
  color: #000;
}

.btn::after {
  display: none;
}

.btn.warning {
  border-color: #000;
  color: #000;
  background: #fff;
}

.btn.primary {
  border: none;
  color: #fff;
  background: #000;
  font-weight: 600;
}

.btn[disabled] {
  border-color: #d1d1d6;
  color: #9e9e9e;
  background: #fff;
}

.bottom-spacer {
  height: 80rpx;
}
