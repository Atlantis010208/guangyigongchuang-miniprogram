/* pages/explore/explore.wxss */
/* 深入探索页面样式 */
.page {
  min-height: 100vh;
  background-color: #f2f2f7;
  padding-bottom: 120rpx;
}
/* 页面头部 */
.header { display:flex; align-items:center; padding: 24rpx 34rpx 0; }
.header-title { margin-right:auto; font-size:56rpx; font-weight:bold; }
.user-avatar { width:72rpx; height:72rpx; border-radius:50%; overflow:hidden; background:#e5e5ea; display:flex; align-items:center; justify-content:center; transition: transform .2s ease; }
.user-avatar:active { transform: scale(.95); }
.avatar-img { width:100%; height:100%; }
.header { 
    display:flex; 
    align-items:center; 
    padding: 20rpx 30rpx 40rpx; /* 增加底部内边距 */
  }

/* 浏览课程按钮 */
.browse-courses-btn {
  background-color: #000;
  border-radius: 50rpx;
  padding: 25rpx 40rpx;
    margin: 40rpx auto; /* 上下外边距40rpx，左右自动外边距实现居中 */
  text-align: center;
    width: 50%;
  box-sizing: border-box;
}

.browse-courses-text {
  color: white;
    font-size: 28rpx;
  font-weight: 500;
}

/* 章节容器 */
.section {
  margin: 0 0 80rpx 0;
  padding: 0 30rpx;
}

.section:first-child {
  margin-top: 40rpx;
}

.section-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #000;
  display: block;
  margin-bottom: 30rpx;
}

.section-description {
  font-size: 30rpx;
  color: rgb(15, 15, 15);
  line-height: 1.5;
  margin-bottom: 40rpx;
  display: block;
}

/* 设备图标网格 */
.device-icons-grid {
  background-color: white;
  border-radius: 50rpx;
  padding: 80rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: none;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 60rpx 40rpx;
  place-items: center;
}

.icon-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-item.center-mac {
  grid-column: 2;
  grid-row: 2;
}

.device-icon {
  width: 80rpx;
  height: 80rpx;
}

.device-icon.mac-icon {
  width: 120rpx;
  height: 120rpx;
}

/* 入门引导卡片 */
.onboarding-card {
  background-color: white;
  border-radius: 50rpx;
  padding: 50rpx;
  box-shadow: none;
}

.onboarding-illustration {
  width: 100%;
  height: 260rpx;
  margin-bottom: 30rpx;
}

.onboarding-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.onboarding-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* iPhone 展示区域 */
.iphone-showcase {
  background-color: white;
  border-radius: 50rpx;
  overflow: hidden;
  box-shadow: none;
}

.iphone-card {
  height: 500rpx;
  overflow: hidden;
}

.iphone-image {
  width: 100%;
  height: 100%;
}

.iphone-description {
  padding: 50rpx;
}

.iphone-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.iphone-subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 服务网格 */
/* 旧的网格布局（不再使用，但保留兼容） */
.services-grid {
  display: flex;
  justify-content: space-between;
  height: auto;
}

.service-card {
  border-radius: 50rpx;
  overflow: hidden;
  box-shadow: none;
  position: relative;
}



/* 短视频卡片 */
.video-card {
  background-color: white;
  border-radius: 50rpx;
  overflow: hidden;
  box-shadow: none;
  margin-bottom: 60rpx;
  position: relative;
}

.video-header {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 2;
}

.video-tag {
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.video-thumbnail {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.video-media { position: relative; height: 400rpx; }
.video-player { width: 100%; height: 100%; border: 0; }

.video-content {
  padding: 40rpx;
}

.video-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  line-height: 1.4;
  margin-bottom: 30rpx;
  display: block;
}

.video-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.play-button {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.play-icon {
  font-size: 28rpx;
  color: #007AFF;
}

.video-duration {
  font-size: 28rpx;
  color: #666;
}

.video-more {
  font-size: 32rpx;
  color: #666;
}

/* 响应式调整 */
@media (max-width: 750px) {
  .services-grid {
    flex-direction: column;
    height: auto;
  }
  .large-card,
  .small-cards-group { width: 100%; margin-left: 0; }
  .services-grid .service-card { margin-bottom: 40rpx; }
  .services-grid .service-card:last-child { margin-bottom: 0; }
  
  .activities-grid {
    flex-direction: column;
  }
  .activities-grid .activity-card { width: 100%; margin-bottom: 28rpx; }
  .activities-grid .activity-card:last-child { margin-bottom: 0; }
  
  .device-icons-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 40rpx 30rpx;
  }
}



.service-title {

  font-size: 36rpx;

  font-weight: 600;

  color: #000;

  display: block;

  margin-bottom: 15rpx;

}



.service-title.white {

  color: white;

}



.service-description {

  font-size: 28rpx;

  color: #666;

  line-height: 1.5;

}



.service-description.white {

  color: rgba(255, 255, 255, 0.9);

}



.service-icon {

  width: 80rpx;

  height: 80rpx;

  margin-bottom: 20rpx;

}



/* 设备支持服务 */

.device-support {

  display: flex;

  justify-content: space-between;

  align-items: center;

  padding: 20rpx 0;

  margin-bottom: 30rpx;

}



.support-title {

  font-size: 36rpx;

  font-weight: 600;

  color: #000;

}



.support-arrow {

  font-size: 32rpx;

  color: #666;

}



.device-showcase {

  background-color: white;

  border-radius: 50rpx;

  padding: 80rpx;

  text-align: center;

  box-shadow: none;

}



.device-image {

  width: 200rpx;

  height: 400rpx;

}


/* 附近活动外层容器 - 类似 .accessories-section */
.nearby-activities-section { padding-left:0; padding-right:0; }
/* 让该分区的标题与介绍与页头对齐 */
.nearby-activities-section .section-title,
.nearby-activities-section .section-description { margin-left:30rpx; margin-right:30rpx; }

/* 附近活动标题栏 - 内部布局不变 */
.nearby-activities {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 40rpx 30rpx 30rpx 30rpx; /* 与页头左边距对齐 */
  margin-bottom: 30rpx;
}

.activities-icon {
  font-size: 32rpx;
}

.activities-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #007AFF;
  flex: 1;
}

.activities-arrow {
  font-size: 28rpx;
  color: #666;
}

/* 活动横向滚动容器 */
.activities-scroller { width:100%; margin-top:20rpx; padding:0; box-sizing:border-box; overflow-x:auto; -webkit-overflow-scrolling:touch; border:none; }

/* 活动滑动轨道 */
.activities-track { display:flex; padding:0 20rpx; }

/* 活动卡片容器 */
.activity-card { flex:0 0 520rpx; margin-right:24rpx; background-color:#fff; border-radius:50rpx; overflow:hidden; box-shadow:none; border:none; }

/* 最后一个卡片去除右侧间距 */
.activity-card:last-child {
  margin-right: 0;
}

/* 活动图片 */
.activity-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover; /* 图片自适应填充 */
}

/* 卡片内容区 - 内部保留适当间距 */
.activity-content {
  padding: 30rpx; /* 卡片内部边距 */
}

.activity-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #000;
  display: block;
  margin-bottom: 15rpx;
  line-height: 1.4;
  /* 长标题处理 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.activity-time {
  font-size: 24rpx;
  color: #007AFF;
}

 
.activities-track { display: inline-flex; padding: 0 20rpx 6rpx; }
.activities-track .activity-card { flex: none; width: 520rpx; box-sizing: border-box; }
.activities-track .activity-card + .activity-card { margin-left: 24rpx; }
/* 将“查看时间”在附近活动卡片中下移约两行 */
.activities-track .service-description { margin-top: 84rpx; }
 
/* 文本自适应换行与容器滚动（推荐服务 + 附近活动） */
.service-title,
.service-title.white,
.service-description,
.service-description.white,
.activity-title,
.activity-time {
  white-space: normal;
  word-break: break-word;
  overflow-wrap: break-word;
}

.service-content {
  max-height: 100%;
  overflow: auto;
}


/* 响应式调整 */

@media (max-width: 750px) {

    .services-grid {
  
      flex-direction: column;
  
      height: auto;
  
    }
  
    
    
    .activities-grid {
  
      flex-direction: column;
  
    }
  
    
    
    .device-icons-grid {
  
      grid-template-columns: repeat(2, 1fr);
  
      gap: 40rpx 30rpx;
  
    }
  
  }
  