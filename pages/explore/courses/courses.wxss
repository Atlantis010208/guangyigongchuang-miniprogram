.page{min-height:100vh;background:#f2f2f7}
.header{display:flex;justify-content:flex-start;align-items:center;padding:30rpx}
.title{font-size:44rpx;font-weight:700}
.filter{color:#007aff}
.calendar{background:#fff}
.week-swiper{height:160rpx}
.dates-grid{display:flex;justify-content:space-between;padding:16rpx 30rpx 10rpx}
.date{flex:1;display:flex;flex-direction:column;align-items:center;gap:8rpx}
.num{width:64rpx;height:64rpx;border-radius:50%;display:flex;align-items:center;justify-content:center}
.num .d{font-weight:700}
.wd{margin-top:8rpx;color:#8e8e93;font-size:24rpx}
.num.active{background:#000;color:#fff}
.week-controls{position:absolute; right:20rpx; top:20rpx; display:flex; gap:16rpx; color:#8e8e93}
.prev,.next{padding:6rpx 12rpx; border-radius:12rpx; background:#f2f2f7}
.banner{margin:20rpx 0;background:#f2f2f7;color:#8e8e93;padding:26rpx 30rpx}
.section{background:#fff;margin-top:10rpx}
.row{display:flex;align-items:center;justify-content:space-between;padding:30rpx}
.near{font-size:32rpx;font-weight:600}
.arrow{color:#8e8e93}
.list{padding:0 30rpx}
.item{padding:30rpx 0;border-top:1rpx solid #efeff4}
.item .title{font-size:36rpx;font-weight:800}
.time,.place{display:block;margin-top:10rpx;color:#8e8e93}
.qr-section{display:flex;flex-direction:column;align-items:center;text-align:center;margin:40rpx 0}
.qr-code{width:200rpx;height:200rpx;margin-bottom:30rpx;border-radius:40rpx;border:1rpx solid #e5e5ea}
.qr-title{font-size:32rpx;font-weight:600}
.qr-subtitle{font-size:24rpx;color:#8e8e93;max-width:500rpx}

