<view class="page">
  <view class="card">
    <view class="avatar-wrap">
      <image class="avatar" src="{{avatarUrl || '/images/个人中心.png'}}" mode="aspectFill"></image>
      <button class="btn ghost" bindtap="chooseAvatar">更换头像</button>
    </view>

    <view class="field">
      <text class="label">昵称</text>
      <input class="input" placeholder="请输入昵称" value="{{nickname}}" bindinput="onNicknameInput" />
    </view>

    <view class="field">
      <text class="label">手机号</text>
      <view class="row">
        <text class="phone">{{phone || '未绑定'}}</text>
        <button class="btn" open-type="getPhoneNumber" bindgetphonenumber="onGetPhoneNumber">获取手机号</button>
      </view>
    </view>

    <button class="btn primary" loading="{{saving}}" bindtap="onSave">保存</button>
  </view>
</view>





