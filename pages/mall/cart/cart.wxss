.page {
  background: #f5f5f7;
  min-height: 100vh;
  /* 预留底部 SubmitBar 高度 */
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.header {
  padding: 40rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center; /* 标题居中 */
  position: sticky;
  top: 0;
  z-index: 10;
  background: rgba(245, 245, 247, 0.95);
  backdrop-filter: blur(10px);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid #e5e5e5;
  border-top-color: #000;
  border-radius: 50%;
  animation: spin 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #8e8e93;
  margin-top: 24rpx;
}

/* 购物车列表 */
.list {
  padding: 20rpx 32rpx;
}

.swipe-cell-item {
  margin-bottom: 28rpx;
  display: block;
  /* 确保 swipe-cell 内部内容样式正确 */
  --swipe-cell-right-width: 65px;
}

.row {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 36rpx;
  padding: 32rpx 24rpx;
  /* margin-bottom 移到了 swipe-cell-item */
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.03);
  position: relative;
  overflow: hidden;
}

.delete-btn {
  width: 65px;
  height: 100%;
  background-color: #ff3b30;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  /* 为了美观，可以给删除按钮也加点圆角，或者就保持方形 */
  /* 如果想要视觉上连贯，可以尝试把 row 的圆角去掉右边，但这太复杂了。 */
  /* 直接方形即可。 */
}

.checkbox-wrapper {
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 24rpx;
  background: #f2f2f7;
  object-fit: cover;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.info {
  flex: 1;
  min-width: 0;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
}

.info-top {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1c1c1e;
  line-height: 1.4;
  margin-bottom: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.specs {
  font-size: 24rpx;
  color: #636366;
  background: #f2f2f7;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  max-width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-bottom {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  width: 100%;
  margin-top: auto;
}

.price {
  font-size: 36rpx;
  color: #000;
  font-weight: 700;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  line-height: 1;
}

/* 数量控制 - 胶囊风格 */
.qty {
  display: flex;
  align-items: center;
  background: #f5f5f7;
  border-radius: 32rpx;
  padding: 6rpx;
  height: 56rpx;
  box-sizing: border-box;
}

.qty-btn {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.qty-btn:active {
  transform: scale(0.9);
  background: #e5e5ea;
}

.num {
  min-width: 56rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #1c1c1e;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 240rpx 40rpx 100rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.2;
  margin-bottom: 40rpx;
}

.empty-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  display: block;
  font-size: 28rpx;
  color: #8e8e93;
  margin-bottom: 60rpx;
}

.empty .btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #000;
  color: #fff;
  border-radius: 40rpx;
  padding: 24rpx 80rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}

/* 悬浮联系客服 */
.floating-contact {
  position: fixed;
  right: 30rpx;
  bottom: 240rpx;
  background: #fff;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  z-index: 90;
  transition: transform 0.2s;
}

.floating-contact:active {
  transform: scale(0.96);
}

.float-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.float-text {
  font-size: 28rpx;
  color: #000;
  font-weight: 600;
}

/* SubmitBar Customization */
.submit-bar {
  border-bottom: none !important;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
}

.select-all-checkbox {
  margin-left: 20px;
}
