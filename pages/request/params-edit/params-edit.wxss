.page{min-height:100vh;background:#f2f2f7}
.header{padding:30rpx}.title{font-size:44rpx;font-weight:700}
.section{background:#fff;border-radius:30rpx;margin:20rpx 30rpx;padding:10rpx}
.section-title{font-size:32rpx;font-weight:600;padding:20rpx;color:#333}
.cell{display:flex;align-items:center;justify-content:space-between;padding:24rpx 20rpx;border-bottom:1rpx solid #f2f2f7}
.cell:last-child{border-bottom:none}
.cell.auto{flex-direction:column;align-items:flex-start}
.label{font-size:28rpx;color:#000;min-width:180rpx}
.input{flex:1;text-align:right;font-size:28rpx}
.textarea{width:100%;min-height:160rpx;background:#f8f8fb;border-radius:20rpx;padding:20rpx;box-sizing:border-box;font-size:28rpx}
.picker{flex:1;text-align:right}
.picker-text{font-size:28rpx;color:#666}
.primary{margin:30rpx;background:#000;color:#fff;border-radius:50rpx;padding:28rpx 0}
.checkbox-group{display:flex;flex-wrap:wrap;gap:16rpx;margin-top:16rpx;width:100%}
.checkbox-item{display:flex;align-items:center;font-size:26rpx;background:#f5f5f5;padding:12rpx 20rpx;border-radius:20rpx}
.checkbox-item.checked{background:#007AFF;color:#fff}
.radio-group{display:flex;flex-wrap:wrap;gap:16rpx;margin-top:16rpx;width:100%}
.radio-item{font-size:26rpx;background:#f5f5f5;padding:12rpx 20rpx;border-radius:20rpx}
.radio-item.checked{background:#007AFF;color:#fff}
.loading{text-align:center;padding:100rpx;color:#999}

