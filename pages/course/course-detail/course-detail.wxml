<view class="detail-page">
  <swiper class="banner" indicator-dots autoplay circular style="height: {{bannerHeight}}rpx" current="{{current}}" bindchange="onSwiperChange">
    <block wx:for="{{images}}" wx:key="*this">
      <swiper-item>
        <image class="banner-image" src="{{item}}" mode="aspectFit" bindtap="onPreviewImage" data-src="{{item}}" bindload="onBannerLoad" data-idx="{{index}}"></image>
      </swiper-item>
    </block>
  </swiper>

  <view class="info">
    <text class="name">{{name}}</text>
    <text class="price">¥{{price}}</text>
  </view>

  <view class="card">
    <text class="section-title">课程简介</text>
    <text class="desc">{{desc}}</text>
  </view>

  <!-- 详情大图（从轮播末图移至此处） -->
  <view wx:if="{{detailImage}}" class="card">
    <text class="section-title">课程详情</text>
    <image class="detail-image" src="{{detailImage}}" mode="widthFix" bindtap="onPreviewDetail" />
  </view>

  <view class="card">
    <text class="section-title">你将获得</text>
    <view class="benefits">
      <view wx:for="{{benefits}}" wx:key="*this" class="benefit-item">{{item}}</view>
    </view>
  </view>

  <!-- 底部占位 -->
  <view class="bottom-spacer"></view>
</view>

<!-- Vant Weapp 商品导航组件 - 必须放在页面容器外部 -->
<van-goods-action safe-area-inset-bottom>
  <!-- 左侧图标按钮：客服 - 使用 dot 属性显示小红点 -->
  <van-goods-action-icon
    icon="chat-o"
    text="客服"
    dot
    bind:click="onContact"
  />
  <!-- 购物车 - 使用 info 属性显示数量徽标 -->
  <van-goods-action-icon
    icon="cart-o"
    text="购物车"
    info="{{cartCount}}"
    bind:click="onGoCart"
  />
  <!-- 收藏按钮 -->
  <van-goods-action-icon
    icon="{{favIcon}}"
    text="收藏"
    bind:click="onToggleFav"
  />
  <!-- 朴素按钮：加入购物车 - 使用 plain 属性，蓝色渐变 -->
  <van-goods-action-button
    text="加入购物车"
    type="warning"
    plain
    color=" #36cfc9"
    bind:click="onAddToCart"
  />
  <!-- 主按钮：立即购买 - 使用蓝色渐变 -->
  <van-goods-action-button
    text="立即购买"
    type="danger"
    color="linear-gradient(to right, #36cfc9, #1890ff)"
    bind:click="onBuyNow"
  />
</van-goods-action>


