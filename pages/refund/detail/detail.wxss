/* pages/refund/detail/detail.wxss */
.page {
  min-height: 100vh;
  background: #f2f2f7;
  padding: 16rpx;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 步骤条卡片 */
.steps-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 状态卡片 */
.status-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.status-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.status-icon.pending {
  background: linear-gradient(135deg, #ff9f0a, #ff6b00);
}

.status-icon.processing {
  background: linear-gradient(135deg, #007AFF, #0051D4);
}

.status-icon.success {
  background: linear-gradient(135deg, #34c759, #28a745);
}

.status-icon.failed {
  background: linear-gradient(135deg, #ff3b30, #d32f2f);
}

.status-info {
  flex: 1;
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
}

.status-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.status-desc {
  font-size: 26rpx;
  color: #86868b;
  margin-top: 8rpx;
  line-height: 1.5;
}

/* 通用卡片 */
.card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.order-no {
  font-size: 24rpx;
  color: #86868b;
  font-family: -apple-system, monospace;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.info-label {
  font-size: 28rpx;
  color: #86868b;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #1d1d1f;
  text-align: right;
  max-width: 60%;
}

.info-value.mono {
  font-family: -apple-system, monospace;
}

.info-value.price {
  font-weight: 600;
  color: #ff3b30;
}

.info-value.detail {
  line-height: 1.5;
}

/* 拒绝原因卡片 */
.reject-card {
  border: 1rpx solid rgba(255, 59, 48, 0.3);
  background: rgba(255, 59, 48, 0.05);
}

.reject-content {
  font-size: 28rpx;
  color: #ff3b30;
  line-height: 1.6;
}

/* 凭证图片 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.evidence-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f5f5f7;
}

/* 订单商品 */
.order-items {
  display: flex;
  flex-direction: column;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
}

.order-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: #f5f5f7;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 26rpx;
  color: #1d1d1f;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-qty {
  font-size: 24rpx;
  color: #86868b;
  margin-top: 6rpx;
}

.item-price {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

/* 时间线 */
.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 20rpx;
  bottom: 20rpx;
  width: 2rpx;
  background: #e5e5ea;
}

.timeline-item {
  position: relative;
  padding-bottom: 32rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -32rpx;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #c7c7cc;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 2rpx #c7c7cc;
}

.timeline-dot.active {
  background: #007AFF;
  box-shadow: 0 0 0 2rpx #007AFF;
}

.timeline-content {
  display: flex;
  flex-direction: column;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeline-status {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.timeline-time {
  font-size: 24rpx;
  color: #86868b;
}

.timeline-remark {
  font-size: 26rpx;
  color: #86868b;
  margin-top: 8rpx;
  line-height: 1.5;
}

/* 操作按钮 */
.action-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}

