/* pages/refund/apply/apply.wxss */
.page {
  min-height: 100vh;
  background: #f2f2f7;
  padding: 16rpx;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.required {
  color: #ff3b30;
  margin-left: 4rpx;
}

.optional {
  font-size: 24rpx;
  color: #86868b;
  margin-left: 8rpx;
}

/* 订单卡片 */
.order-card .card-header {
  justify-content: space-between;
}

.order-no {
  font-size: 24rpx;
  color: #86868b;
  font-family: -apple-system, monospace;
}

.order-items {
  margin-bottom: 24rpx;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
}

.order-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f5f5f7;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-specs {
  font-size: 24rpx;
  color: #86868b;
  margin-top: 8rpx;
}

.item-qty {
  font-size: 24rpx;
  color: #86868b;
  margin-top: 8rpx;
}

.item-price {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
  margin-left: 20rpx;
}

.order-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #f2f2f7;
}

.total-label {
  font-size: 28rpx;
  color: #86868b;
}

.total-amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff3b30;
}

/* 退款类型 */
.refund-type {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f5f5f7;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.type-item.active {
  background: rgba(0, 122, 255, 0.08);
  border-color: #007AFF;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.type-content {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.type-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1d1d1f;
}

.type-desc {
  font-size: 24rpx;
  color: #86868b;
  margin-top: 6rpx;
}

.type-check {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 退款原因选择器 */
.reason-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f5f5f7;
  border-radius: 16rpx;
}

.reason-text {
  font-size: 28rpx;
  color: #1d1d1f;
}

.reason-placeholder {
  font-size: 28rpx;
  color: #c7c7cc;
}

/* 详细说明 */
.detail-field {
  background: #f5f5f7 !important;
  border-radius: 16rpx !important;
  padding: 20rpx !important;
}

/* 上传凭证 */
.uploader-wrap {
  padding: 8rpx 0;
}

/* 提交按钮 */
.submit-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.submit-wrap .van-button {
  height: 96rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
}

