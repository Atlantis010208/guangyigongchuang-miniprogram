.page{min-height:100vh;background:#f2f2f7}
.header{padding:30rpx}.title{font-size:44rpx;font-weight:700}
.section{background:#fff;border-radius:30rpx;margin:20rpx 30rpx;padding:10rpx}
.cell{padding:24rpx 20rpx;border-bottom:1rpx solid #f2f2f7}
.cell.auto{display:flex;flex-direction:column;gap:16rpx}
.label{font-size:28rpx;color:#000}
.input{width:100%;text-align:right;font-size:28rpx}
.link{border-radius:40rpx;padding:12rpx 22rpx;background:#000;color:#fff;width:260rpx}
.thumbs{display:flex;gap:12rpx;flex-wrap:wrap}
.thumb{width:160rpx;height:160rpx;border-radius:20rpx;background:#eaeaea}
.primary{margin:30rpx;background:#000;color:#fff;border-radius:50rpx;padding:28rpx 0}

